const mongoose = require("mongoose");

const reqString = {
  type: String,
  required: true,
};

const imgSchema = mongoose.Schema({
  guildID: reqString,
  username: reqString,
  userID: reqString,
  isArk: {
    type: Boolean,
    default: false
  },
  description: {
    type: [],
    required: true,
  },
  description2: {
    type: [],
    required: true,
  },
  description3: {
    type: [],
    required: true,
  },
    background: {
      type: [],
      required: true,
    },
    BGcolor: {
      type: [],
      required: true,
    },
    assign: {
      type: [],
      required: true,
    }
});

module.exports = mongoose.model("user-info", imgSchema);
